{
  "name": "firm-validator",
  "version": "1.0.0",
  "description": "The intelligent TypeScript validator with JIT compiler and smart caching. 10.58KB gzipped, zero dependencies.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./primitives": {
      "import": {
        "types": "./dist/primitives.d.ts",
        "default": "./dist/primitives.js"
      },
      "require": {
        "types": "./dist/primitives.d.cts",
        "default": "./dist/primitives.cjs"
      }
    },
    "./composites": {
      "import": {
        "types": "./dist/composites.d.ts",
        "default": "./dist/composites.js"
      },
      "require": {
        "types": "./dist/composites.d.cts",
        "default": "./dist/composites.cjs"
      }
    },
    "./compiler": {
      "import": {
        "types": "./dist/compiler.d.ts",
        "default": "./dist/compiler.js"
      },
      "require": {
        "types": "./dist/compiler.d.cts",
        "default": "./dist/compiler.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:cov": "vitest run --coverage",
    "bench": "npx tsx benchmarks/performance.bench.ts",
    "bench:vitest": "vitest bench",
    "bench:compare": "vitest bench --compare",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "size": "npm run build && size-limit",
    "size:why": "npm run build && size-limit --why",
    "prepublishOnly": "npm run test && npm run build",
    "circular": "dpdm --circular --no-warning src/index.ts"
  },
  "size-limit": [
    {
      "name": "Full Bundle with Dependencies",
      "path": "dist/index.js",
      "limit": "11 KB",
      "gzip": true
    }
  ],
  "keywords": [
    "validator",
    "schema",
    "typescript",
    "validation",
    "type-safe",
    "performance",
    "zod-alternative",
    "runtime-validation",
    "json-schema",
    "data-validation",
    "form-validation",
    "api-validation",
    "express",
    "fastify",
    "next.js",
    "react",
    "vue",
    "svelte",
    "trpc",
    "graphql",
    "prisma",
    "type-inference"
  ],
  "author": {
    "name": "fomenkoruslan",
    "email": "fruslanj@gmail.com",
    "url": "https://github.com/Linol-Hamelton"
  },
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.6.1",
    "dpdm": "^3.14.0",
    "eslint": "^8.56.0",
    "expect-type": "^1.3.0",
    "fast-check": "^4.5.3",
    "rimraf": "^5.0.5",
    "size-limit": "^12.0.0",
    "tsd": "^0.33.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "valibot": "^1.2.0",
    "vitest": "^1.2.0",
    "yup": "^1.7.1",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Linol-Hamelton/firm.git"
  },
  "bugs": {
    "url": "https://github.com/Linol-Hamelton/firm/issues"
  },
  "homepage": "https://github.com/Linol-Hamelton/firm#readme"
}
